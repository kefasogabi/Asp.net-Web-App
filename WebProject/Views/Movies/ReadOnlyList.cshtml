@model IEnumerable<WebProject.Models.Movies>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table id="movie" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
          
        </tr>
    </thead>
    <tbody>
      
    </tbody>

</table>
@section scripts
    {

    
    <script>
        $(document).ready(function () {
           var table = $("#movie").DataTable({
                ajax: {
                    url: "/api/movie",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/movies/Details/" + movie.id + " '>" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    
                ]

            });
            
        });
    </script>

    
    }